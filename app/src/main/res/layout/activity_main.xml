<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e2e2e2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="900px"
        android:background="#1da4ed"
        android:clipToPadding="true"
        android:fitsSystemWindows="true">

        <Button
            android:id="@+id/btn_start"
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30px"
            android:background="#ffffff"
            android:text="开启抢单" />

        <TextView
            android:id="@+id/server_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_start"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="11dp"
            android:text="当前未开启"
            android:textColor="#ffffff"
            android:textSize="60px" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_lb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true">

        <RelativeLayout
            android:id="@+id/layout_qdjl"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:background="#ffffff"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_qd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60px"
                android:text="抢单记录" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_qd"
                android:layout_marginLeft="60px"
                android:text="点击查看抢单记录"
                android:textSize="9sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_setting"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:layout_below="@+id/layout_qdjl"
            android:layout_marginTop="1.5px"
            android:background="#ffffff"
            android:clickable="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60px"
                android:text="更多设置" />

            <TextView
                android:id="@+id/tv_mes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_setting"
                android:layout_marginLeft="60px"
                android:text="支持货运平台切换,价格、路程选择"
                android:textSize="9sp" />
        </RelativeLayout>

      <!--  <RelativeLayout
            android:id="@+id/layout_lx"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:layout_below="@+id/layout_setting"
            android:layout_marginTop="1.5px"
            android:background="#ffffff"
            android:clickable="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_lx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60px"
                android:text="联系客服" />

            <TextView
                android:id="@+id/tv_lxs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_lx"
                android:layout_marginLeft="60px"
                android:text="使用出现故障,请联系客服处理,点击拨打"
                android:textSize="9sp" />
        </RelativeLayout>-->

        <RelativeLayout
            android:id="@+id/layout_hc"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:layout_below="@+id/layout_setting"
            android:layout_marginTop="1.5px"
            android:background="#ffffff"
            android:clickable="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_hc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60px"
                android:text="清除缓存" />

            <TextView
                android:id="@+id/tv_qhc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_hc"
                android:layout_marginLeft="60px"
                android:text="清除应用程序使用残留"
                android:textSize="9sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_error"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:layout_below="@+id/layout_hc"
            android:layout_marginTop="1.5px"
            android:background="#ffffff"
            android:clickable="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60px"
                android:text="错误反馈" />

            <TextView
                android:id="@+id/tv_loaderor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_error"
                android:layout_marginLeft="60px"
                android:text="出现未抢单，抢单失败，请点击此处提交错误日志"
                android:textSize="9sp" />
        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:layout_below="@+id/tv_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="温馨提示：为避免同一时间我们帮您抢到几个订单,造成拒单率的提升，我们在帮您抢到一单后，会自动暂停抢单，您运输完成之后，请记得手动开启抢单模式哦！"
        android:id="@+id/textView7"
        android:layout_marginLeft="30px"
        android:layout_marginTop="150px"
        android:layout_marginRight="30px"
        android:textColor="#e71d61"/>
</LinearLayout>